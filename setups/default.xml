<?xml version="1.0" encoding="utf-8"?>

<scene version="1.0.0">
	<integrator type="mvnee">
		<output sessionName="testOutput" width="512" height="512"/>
		<samples spp="10000"/>
		<!-- Stopping criteria for all paths: max path length -->
		<maxPathSegments value="30"/>
		<!-- Maximum expected segment count for MVNEE -->
		<MESC value="4"/>
		<!-- Specify maximum thread count! -->
		<threads count="8"/>
	</integrator>

	<camera type="perspective">		
		<distanceToImagePlane value="1.0"/>
		<imagePlaneWidth value="1.0"/>
		<imagePlaneHeight value="1.0"/>
		<lookAt origin="0 0 -2" target="0 0 1" up="0 1 0"/>
	</camera>
	
	<lightsource type="lightdisk">
		<position center="0 1 1" normal="0 -1 0"/>
		<radius value="0.2"/>
		<brightness value="60.0"/>
		<color value="1.0 1.0 1.0"/>
	</lightsource>
	
	<medium type="homogeneous">		
		<coefficients mu_s="1.0" mu_a="1.0"/>
		<phaseFunction type="Henyey-Greenstein" g="0.9"/>
	</medium>

	<model type="obj" name="suzanne">
		<filename value="../models/suzanne.obj"/>		
		<transform translate="0 1 0" scale="1.0"/>
		<!-- Albedo for diffuse Lambertian BRDF -->
		<material albedo="1 0 0"/>
	</model>
	
	<model type="obj" name="sphere">
		<filename value="../models/sphere.obj"/>		
		<transform translate="0 1 0" scale="1.0"/>
		<material albedo="1 0 0"/>
	</model>
	
	<model type="plane" name="groundPlane">
		<transform y="-1" scale="10.0"/>
		<material albedo="1 0 0"/>
	</model>
	
</scene>
